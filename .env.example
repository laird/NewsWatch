# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/newswatch

# Server Configuration
PORT=3000
NODE_ENV=development

# AI Provider Configuration
# Options: 'openai', 'gemini', 'auto' (auto selects based on available API keys)
AI_PROVIDER=openai

# OpenAI API Configuration (for cloud-based AI)
# OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Gemini API Configuration (alternative to OpenAI)
# GEMINI_API_KEY=your-gemini-api-key-here

# LM Studio / Local LLM Configuration
# Set OPENAI_BASE_URL to your LM Studio endpoint
# LM Studio typically runs on localhost:1234, but can be on any network address
OPENAI_BASE_URL=http://localhost:1234/v1
OPENAI_API_KEY=lm-studio
AI_MODEL=local-model

# Example for remote LM Studio:
# OPENAI_BASE_URL=http://100.123.153.110:1234/v1
# AI_MODEL=qwen/qwen3-coder-30b

# SendGrid (for email newsletters)
# SENDGRID_API_KEY=SG.your-sendgrid-api-key
# EMAIL_FROM=newsletter@newswatch.app

# Newsletter Schedule
NEWSLETTER_SEND_TIME=06:00
NEWSLETTER_TIMEZONE=America/New_York
